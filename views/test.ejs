<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= collection %> List</title>
    <style>
        .animal-container {
            margin-bottom: 20px;
        }
        .animal-name {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1><%= collection.charAt(0).toUpperCase() + collection.slice(1) %> List</h1>
    <% data.forEach(item => { %>
        <div class="animal-container">
            <p class="animal-name"><%= item.name %></p>
            <% if (item.breed) { %>
                <p>Breed: <%= item.breed %></p>
            <% } %>
            <% if (item.color) { %>
                <p>Color: <%= item.color %></p>
            <% } %>
        </div>
    <% }); %>
</body>
</html>
